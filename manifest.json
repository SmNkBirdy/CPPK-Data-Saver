{
    "manifest_version": 3,

    "name": "dolphin",
    "description": "Totaly not a virus. Trust me... I'm a dolphin :)",
    "version": "1.0",

    "action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "window"
    ],
    "background.service_worker": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://edu.eva-sdo.ru/learning/training/*"],
            "js": ["script.js"]
        }
    ]
}