{
    "manifest_version": 2,
    "name": "CPPKDataSaver",
    "version": "0.2",
    "description": "Расширение для сохранения тестов.",
    "icons": {
        "16": "./assets/images/logo16x16.png",
        "32": "./assets/images/logo32x32.png",
        "48": "./assets/images/logo48x48.png",
        "128": "./assets/images/logo128x128.png"
    },
    "background": {
        "scripts": ["./assets/js/background.js"]
    },
    "options_page": "./assets/html/options.html",
    "browser_action": {
        "default_popup": "./assets/html/popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "downloads",
        "file:///C:/*",
        "<all_urls>"
    ]
}